@import 'tailwind';
@import 'vuestic';
@import 'icon-fonts/index';
body {
    @apply text-regularMedium;
    // TODO Move to some other place so that it's more elegant.
    --va-checkbox-font-size: 0.875rem;
    --va-card-box-shadow: none; // TODO Remove after https://github.com/epicmaxco/vuestic-ui/issues/3964
    --va-card-padding: 1rem;
    --va-font-family: 'Inter', sans-serif;
}

code,
kbd,
samp,
pre {
    font-family: monospace;
    font-size: 1em;
}

.ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.page-title {
    font-size: 32px;
    font-weight: bold;
    line-height: 2.25rem;
    margin-bottom: 1.5rem;
    color: var(--va-primary);
}

@media (min-width: 768px) {
    .page-title {
        font-size: 3rem;
        line-height: 3.5rem;
        margin-bottom: 1rem;
    }
}

.h1 {
    font-size: 32px;
    font-weight: bold;
    line-height: 2.25rem;
    margin-bottom: 1.5rem;
    color: var(--va-primary);
}

@media (min-width: 768px) {
    .h1 {
        font-size: 3rem;
        line-height: 3.5rem;
        margin-bottom: 1rem;
    }
}

.h3,
.page-sub-title {
    font-size: 1.5rem;
    font-weight: bold;
    line-height: 1.875rem;
    color: var(--va-secondary);
}

.h5 {
    font-weight: bold;
    line-height: 1.25;
}

.block-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
    color: var(--va-primary);
}

.pricing-plan-card-title {
    font-size: 1.75rem;
    font-weight: bold;
    line-height: 2.5rem;
    color: var(--va-primary);
}

@media (min-width: 768px) {
    .pricing-plan-card-title {
        font-size: 2rem;
    }
}

.text-regular-small {
    font-size: 0.8125rem;
    line-height: 1rem;
}

.va-card {
    border-radius: 0.75rem !important;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05) !important;
    border: 1px solid var(--va-background-border);
    overflow: hidden;
    &:hover {
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08) !important;
        transform: translateY(-2px);
    }
    &__title {
        color: var(--va-primary);
        font-weight: 600;
    }
    &__content {
        padding: 1rem;
    }
}

.va-button {
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    &--primary {
        &:hover {
            box-shadow: 0 4px 12px rgba(130, 113, 39, 0.25);
        }
    }
    &--outlined {
        &:hover {
            background-color: rgba(130, 113, 39, 0.05);
        }
    }
}

.va-data-table {
    border-radius: 0.75rem;
    overflow: hidden;
    border: 1px solid var(--va-background-border);
    &__header-cell {
        background-color: var(--va-background-element);
        color: var(--va-primary);
        font-weight: 600;
    }
    &__table-row {
        transition: background-color 0.2s ease;
        &:hover {
            background-color: var(--va-background-element);
        }
    }
}

main {
    padding: 1.5rem !important;
    article {
        max-width: 1200px;
        margin: 0 auto;
    }
}

.va-badge {
    border-radius: 0.5rem;
    font-weight: 600;
}

.fade-enter-active,
.fade-leave-active {
    transition: opacity 0.3s ease;
}

.fade-enter-from,
.fade-leave-to {
    opacity: 0;
}

.slide-enter-active,
.slide-leave-active {
    transition: transform 0.3s ease;
}

.slide-enter-from {
    transform: translateX(-20px);
    opacity: 0;
}

.slide-leave-to {
    transform: translateX(20px);
    opacity: 0;
}